#!/usr/bin/env bash

set -e

if [[ -n "${DEBUG}" ]]; then
  set -x
fi

provider=$1
key=$2
secret=$3
filepath=$4
bucket=$5
destination=$6
max_concurrent_requests=$7
max_bandwidth=$8
storage_class=$9
content_disposition=${10}

case "${provider}" in
"aws")
  if [[ -z "${secret}" ]]; then
    >&2 echo "Missing AWS secret access key"
    exit 1
  fi
  AWS_ACCESS_KEY_ID=${key} AWS_SECRET_ACCESS_KEY=${secret} upload_aws \
    "${filepath}" "${bucket}" "${destination}" "${max_concurrent_requests}" "${max_bandwidth}" "${storage_class}" "${content_disposition}"
  ;;
"gcp")
  if [[ ! -f "${key}" ]]; then
    echo "${key}" | base64 -d > /tmp/sa.json
    key=/tmp/sa.json
  fi
  upload_gcp "${key}" "${filepath}" "${bucket}" "${destination}" "${storage_class}" "${content_disposition}"
  ;;
*)
  exit 1
  ;;
esac
